@model TechEvent.Web.Areas.Admin.ViewModels.TalkViewModel

@{
    ViewData["Title"] = "Talk";
}

<h4>Edit your talk</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Talk"  asp-route-year="@ViewBag.Year">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="SpeakerId" />
            <input type="hidden" asp-for="EditionId" />
            <input type="hidden" asp-for="TalkTypeId" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea rows="5" asp-for="Description" class="form-control" ></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-controller="Home" asp-route-year="@ViewBag.Year">Go to your page</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

