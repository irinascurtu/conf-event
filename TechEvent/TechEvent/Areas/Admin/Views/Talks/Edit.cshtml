@model TechEvent.Web.Areas.Admin.ViewModels.TalkViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Talk</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="SpeakerId" />
            <input type="hidden" asp-for="EditionId" />
            <div class="form-group">
                <label for="Edition" class="control-label">Edition:</label>
                <input id="Edition" class="form-control" value="@Edition.Years[Model.EditionId]" readonly />
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea rows="5" asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="Speaker" class="control-label">Speaker:</label>
                <input id="Speaker" class="form-control" value="@ViewBag.Speaker" readonly />
            </div>
            <div class="form-group">
                <label asp-for="TalkTypeId" class="control-label">Choose the type:</label>
                <select asp-for="TalkTypeId" year=@ViewBag.Year class="form-control"></select>
                <span asp-validation-for="TalkTypeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-route-year="@ViewBag.Year">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
