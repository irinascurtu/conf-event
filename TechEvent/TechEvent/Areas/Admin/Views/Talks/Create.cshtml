@model TechEvent.Web.Areas.Admin.ViewModels.TalkViewModel
@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Talk</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="EditionId" class="control-label"></label>
                <future-edition asp-for="EditionId" year=@ViewBag.Year  class="form-control"></future-edition>
                <span asp-validation-for="EditionId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea rows="5" asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SpeakerId" class="control-label">Choose one speaker:</label>
                <select asp-for="SpeakerId" class="form-control"></select>
                <span asp-validation-for="SpeakerId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TalkTypeId" class="control-label">Choose the type:</label>
                <select asp-for="TalkTypeId" class="form-control"></select>
                <span asp-validation-for="TalkTypeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-route-year=@ViewBag.Year>Back to List</a>
</div>

@section Scripts {
    <script src="~/js/createEditTalk.js"></script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
