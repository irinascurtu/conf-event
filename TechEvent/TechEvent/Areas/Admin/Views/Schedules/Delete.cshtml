@using TechEvent.Domain.UsefulClases
@model TechEvent.Domain.Entities.Schedule

@{
    ViewData["Title"] = "Delete";
}

<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="row">     
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.StartHour)
        </dt>
        <dd class="col-sm-10">
            @{ string startHour = new Time(Model.StartHour).ToString(); }
            <span>@startHour</span>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Talk.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Talk.Name)
        </dd>
    </dl>
    
    <form asp-action="Delete" asp-route-id="@Model.Id" asp-route-year="@ViewBag.Year">
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" asp-route-year="@ViewBag.Year">Back to List</a>
    </form>
</div>
