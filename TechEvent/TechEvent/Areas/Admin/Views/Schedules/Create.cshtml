@using TechEvent.Domain.UsefulClases
@model TechEvent.Domain.Entities.Schedule

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Schedule</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" asp-route-year="@ViewBag.Year">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="EditionId" value="@ViewBag.EditionId" class="form-control" hidden />
            <div class="form-group">
                <label asp-for="RoomId" class="control-label">Choose one room</label>
                <select asp-for="RoomId" year="@ViewBag.Year" class="form-control"></select>
                <span asp-validation-for="RoomId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TalkId" class="control-label"></label>
                <select asp-for="TalkId" year="@ViewBag.Year" class="form-control"></select>
                <span asp-validation-for="TalkId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="StartHour" class="form-control" hidden>
            </div>

            <div class="form-group">
                <label for="StartHourTime" class="control-label">Starts at:</label>
                <input type="time" id="StartHourTime" name="StartHourTime" required class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="BreakAfter" class="control-label">Break after [min]</label>
                <input asp-for="BreakAfter" class="form-control" />
                <span asp-validation-for="BreakAfter" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="EndHourTime" class="control-label">Ends at:</label>
                <input type="time" id="EndHourTime" name="EndHourTime" required class="form-control"  readonly/>
            </div>

            <div class="form-group">
                <input asp-for="EndHour" class="form-control" hidden />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Index" asp-route-year="@ViewBag.Year">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script src="~/js/createSchedule.js"></script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

