@model TechEvent.Domain.Entities.TalkType

@{
    ViewData["Title"] = "Delete";
}


<div class="row">
    <div class="col-md-8">
        <h3>You are about to delete the talk type @Model.Name</h3>
        <br />

        @if (Model.Talks.Count > 0)
        {
            <div class="alert alert-warning">
                <p>This category contains @Model.Talks.Count conferences</p>
                <ul>
                    @foreach (var talk in Model.Talks)
                    {
                        <li><a asp-area="admin" asp-controller="Talks" asp-action="Details" asp-route-id="@talk.Id">@talk.Name</a></li>
                    }
                </ul>
                <p>All of the conferences will be lost if you delete this category!</p>
            </div>
        }
        else
        {
            <div class="alert alert-info">
                <p>This category doesn't contain any conference.</p>
            </div>
        }
        <br />
        <div>
            <p>Are you shure you want to delete this ?</p>
        </div>

        <form asp-action="Delete" asp-route-year=@ViewBag.Year>
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-action="Index" asp-route-year=@ViewBag.Year>Back to List</a>
        </form>
    </div>
</div>