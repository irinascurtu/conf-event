    ViewData["Title"] = "ChangeStatus";
}

<h1>ChangeStatus</h1>

<h4>PaperChangeStatusViewModel</h4>
<hr />
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayName("Speaker")
        </dt>
        <dd class="col-sm-10">
            <p>@(Model.FirstName + " " + Model.LastName)</p>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Position)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Position)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LinkedIn)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LinkedIn)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayName("Edition")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Edition.Tagline)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayName("Talk Type")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TalkType.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PresentationTitle)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PresentationTitle)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PresentationDescription)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PresentationDescription)
        </dd>
    </dl>
</div>
<div class="row">
    <div class="col-md-4">
        <form asp-action="ChangeStatus">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="Id" class="form-control" hidden />
            </div>
            <div class="form-group">
                <label asp-for="PaperStatusId" class="control-label"></label>
                <select asp-for="PaperStatusId" class="form-control" asp-items="Html.GetEnumSelectList<PaperStatusEnum>()"></select>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts{

    <script src="~/js/changeStatus.js"></script>
