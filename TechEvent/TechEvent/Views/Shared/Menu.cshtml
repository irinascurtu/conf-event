<header class="meniu">

    <nav class="navbar navbar-expand-md bg-dark navbar-dark">
        <!-- Brand -->
        <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index" asp-route-year="@ViewBag.Year">TechEvent</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar">
            <span class="navbar-toggler-icon"></span>
        </button>

        <!-- Navbar links -->
        <div class="collapse navbar-collapse" id="collapsibleNavbar">
            <ul class="navbar-nav">
                <li class="nav-item dropdown">
                    <a class="nav-link" href="#" id="navbardrop" data-toggle="dropdown">Details about<i class="fas fa-caret-down"></i></a>
                    <div class="dropdown-menu bg-dark">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index" asp-route-year="@ViewBag.Year" asp-fragment="speakers">Speakers</a>
                        <a class="nav-link" asp-area="" asp-controller="Talks" asp-action="Index" asp-route-year="@ViewBag.Year">Talks</a>
                        <a a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index" asp-route-year="@ViewBag.Year" asp-fragment="sponsors">Sponsors</a>
                        <a a class="nav-link" asp-area="" asp-controller="Home" asp-action="Agenda" asp-route-year="@ViewBag.Year">Agenda</a>
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index" asp-route-year="@ViewBag.Year" asp-fragment="about">About</a>
                    </div>
                </li>
                <li class="nav-item">
                    <span><a class="nav-link" asp-area="" asp-controller="Home" asp-action="CallForPapers" asp-route-year="@ViewBag.Year">Call for papers</a></span>
                </li>
                @if (SignInManager.IsSignedIn(User) && User.IsInRole("Administrator"))
                {

                    <li class="nav-item">
                        <a class="nav-link" asp-area="admin" asp-controller="Sponsors" asp-action="Index" asp-route-year="@ViewBag.Year">Go to admin side</a>
                    </li>
                }
                @if (SignInManager.IsSignedIn(User) && User.IsInRole("Speaker"))
                {
                    <li class="nav-item">
                        <a class="nav-link" asp-area="SpeakerSide" asp-controller="Home" asp-action="Index" asp-route-year="@ViewBag.Year">View your info</a>
                    </li>
                }
            </ul>
            <ul class="navbar-nav" style="margin-left:auto;">
                <li class="nav-item dropdown">
                    <a class="nav-link" href="#" id="navbardrop" data-toggle="dropdown">
                        Editions<i class="fas fa-caret-down"></i>
                    </a>
                    <all-editions class="dropdown-menu bg-dark"></all-editions>
                </li>
            </ul>

            <partial name="~/Views/Shared/_LoginPartial.cshtml" />

        </div>
    </nav>
</header>

