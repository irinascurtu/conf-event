@model IEnumerable<TechEvent.Domain.Entities.Speaker>


<div class="row">
    @foreach (var speaker in Model)
    {
        <div class="col-lg-4 col-md-6 col-sm-12">
            <div class="text-center" style="height:650px; padding:20px 10px;">
                <div>
                    <h4>
                        @speaker.FullName
                    </h4>
                </div>
                <div>
                    <div class="container">
                        <a asp-controller="Speakers" asp-action="Details2" asp-route-pageslug="@speaker.PageSlug" asp-route-year="@ViewBag.Year">
                            <img src="@Url.Action("GetImage","Speakers",new { Id = speaker.Id })" class="img-fluid rounded-circle" width="200" style="max-height:200px;" />
                        </a>
                    </div>

                    <p>@speaker.Position</p>
                    <p><a href="@speaker.LinkedIn" target="_blank"><i class="fab fa-linkedin-in"></i></a></p>
                    <p>@speaker.Description</p>
                </div>
            </div>
        </div>
    }

</div>